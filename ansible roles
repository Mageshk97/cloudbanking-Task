- name: Install Nginx
  apt:
    name: nginx
    state: present
  notify:
    - Restart Nginx

- name: Configure Nginx
  template:
    src: nginx.conf.j2
    dest: /etc/nginx/nginx.conf
  notify:
    - Reload Nginx

- name: Ensure Nginx service is started
  service:
    name: nginx
    state: started
Tomcat Role (roles/tomcat/tasks/main.yml):

- name: Install Tomcat
  apt:
    name: tomcat
    state: present

- name: Deploy Application War
  copy:
    src: "{{ war_file_path }}"
    dest: /var/lib/tomcat/webapps/

- name: Ensure Tomcat service is started
  service:
    name: tomcat
    state: started
MySQL Role (roles/mysql/tasks/main.yml):
- name: Install MySQL
  apt:
    name: mysql-server
    state: present

- name: Secure MySQL Installation
  mysql_secure_installation:
    login_user: root
    login_password: "{{ mysql_root_password }}"
    state: present
    remove_anonymous_user: yes
    remove_test_database: yes
    disallow_root_login_remotely: yes
    remove_remote_root: yes
    update_password: yes
    password: "{{ mysql_root_password }}"

- name: Ensure MySQL service is started
  service:
    name: mysql
    state: started

